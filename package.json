{
  "name": "castelet",
  "version": "1.0.0-alpha.0",
  "description": "A generic puppeteer pool",
  "main": "index.min.js",
  "author": "John Bragg @ Opal Labs <jbragg@workwithopal.com>",
  "license": "MIT",
  "repository": "https://github.com/opallabs/castelet",
  "keywords": [
    "castelet",
    "puppeteer",
    "chrome",
    "headless",
    "pool",
    "pooling",
    "lightning-pool"
  ],
  "scripts": {
    "coverage": "nyc check-coverage --lines 95 --functions 85 --branches 95",
    "prepare": "babel index.js > index.min.js",
    "lint": "eslint index.js",
    "release:alpha": "release-it --preRelease=alpha",
    "release:beta": "release-it --preRelease=beta",
    "release:rc": "release-it --preRelease=rc",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "release": "release-it patch",
    "test": "nyc ava",
    "test:ci": "nyc ava --tap | tap-xunit",
    "test:verbose": "nyc ava --verbose"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "dependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "debug": "^3.1.0",
    "lightning-pool": "^2.0.1",
    "puppeteer": "^1.7.0"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-rc.1",
    "@babel/core": "7.0.0-rc.1",
    "@babel/preset-env": "7.0.0-rc.1",
    "@babel/preset-typescript": "7.0.0-rc.1",
    "@babel/register": "7.0.0-rc.1",
    "ava": "1.0.0-beta.7",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-minify": "^0.4.3",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "hothouse": "^0.4.13",
    "npm-audit-ci": "^1.0.1",
    "nyc": "^13.0.1",
    "release-it": "^7.6.0",
    "tap-xunit": "^2.3.0"
  }
}
